    <div class="carousel-item active">
      <img
        src="http://safety.iiti.ac.in/images/demo/slider/1.jpg"
        class="fixed-height d-block w-100"
        alt="First slide"
        style="max-width:100%;height:100%;"
      />
      <div class="carousel-caption d-none d-md-block">
        
      </div>
    </div>
    <div class="carousel-item">
      <img
        src="http://safety.iiti.ac.in/images/demo/slider/20.jpg"
