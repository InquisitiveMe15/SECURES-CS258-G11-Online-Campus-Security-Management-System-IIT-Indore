<% include ./partial/header %>
<div
  class="col-sm-12"
  style="margin: auto; margin-top: 35px; margin-left: 100px; text-align: -webkit-center; "
>
  <form
    action="/warden/<%=warden.id%>/leave/<%=leave._id%>/<%=student.id%>/info"
    method="POST"
  >
    <div
      class="container-fluid bg-3 text-center"
      
    >
      <h1><strong><%=student.name%></strong></h1>
      <br />
      <div class="row">
        <div class="col-sm-4">
          <img
            style="border-radius: 100%"
            src="<%=student.image%>"
            alt="image"
          />
        </div>
        
        <div class="col-sm-4">
          <h3><strong> Subject: </strong><%=leave.subject %></h3>
          <h3><strong>Status:</strong> <%=leave.wardenstatus %></h3>
          <h3><strong>From:</strong> <%=moment(leave.from).format('DD/MM/YYYY') %></h3>
          <h3><strong>To:</strong> <%=moment(leave.to).format('DD/MM/YYYY') %></h3>
          <h3><strong>Days:</strong> <%=leave.days%></h3>
          <div style="float:inherit">
            <input
              type="submit"
              class="btn btn-block btn-success"
              name="action"
              value="Approve"
            />
            <input
              type="submit"
              class="btn btn-block btn-danger"
              name="action"
              value="Decline"
            />
          </div>
        </div>

        
      </div>
    </div>
  </form>
  <div style="text-align:center; margin-top: 10px;">
          
    <a href="/warden/home" class="btn btn-info btn-sm" style="width: 100px; margin-top: 40px">Back</a>
  </div>
</div>
<% include ./partial/footer %>
