<% include ./partial/header %>
<div
  class="container"
  style=" position: relative;
border-radius: 5px;
background-color: #f2f2f2;
padding: 60px 0 30px 0;
width: 40%;

"
>

    
    
      <form action="/student/<%=student._id%>?_method=PUT" method="POST" style="margin-top: 20px;">
        <div class="row">
          <div class="col">
              <h1 style="text-align:center;">Edit Profile, <%= student.name%></h1>
              <div class=" form-group form-inline">
                  <label for="name" style="width: 200px;
                  display: inline-block;
                  text-align: center;
                  ">Name</label>
                  <input
                    class="form-control"
                    type="text"
                    id="name"
                    value="<%= student.name%>"
                    name="student[name]"
                  />
                </div>
                <div class=" form-group form-inline">
                    <label for="username" style="width: 200px;
                    display: inline-block;
                    text-align: center;
                    ">Username</label>
                  <input
                    class="form-control"
                    type="text"
                    id="username"
                    value="<%= student.username%>"
                    name="student[username]"
                  />
                </div>
                <div class=" form-group form-inline">
                    <label for="phonenumber" style="width: 200px;
                    display: inline-block;
                    text-align: center;
                    ">Phone Number</label>
                  <input
                    class="form-control"
                    type="text"
                    id="phonenumber"
                    value="<%= student.phonenumber%>"
                    name="student[phonenumber]"
                  />
                </div>
                <div class=" form-group form-inline">
                    <label for="emailid" style="width: 200px;
                    display: inline-block;
                    text-align: center;
                    ">Email Id</label>
                  <input
                    class="form-control"
                    type="text"
                    id="emailid"
                    value="<%= student.emailid%>"
                    name="student[emailid]"
                  />
                </div>
                <div class=" form-group form-inline">
                    <label for="hostel" style="width: 200px;
                    display: inline-block;
                    text-align: center;
                    ">Office</label>
                  <input
                    class="form-control"
                    type="text"
                    id="hostel"
                    value="<%= student.hostel%>"
                    name="student[hostel]"
                  />
                </div>
                <div class=" form-group form-inline">
                    <label for="url" style="width: 200px;
                    display: inline-block;
                    text-align: center;
                    ">Image-url</label>
                  <input
                    class="form-control"
                    type="text"
                    id="url"
                    value="<%= student.image%>"
                    name="student[image]"
                  />
                </div>
                <div class="form-group">
                  <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
          </div>
        </div>
        
      </form>
      <div style="text-align: center;">
      <a href="/student/<%= student.id%>">Back</a>
    </div>
    </div>
  </div>
</div>

<% include ./partial/footer %>
