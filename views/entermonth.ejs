<% include ./partial/header %>
<form action="/warden/<%=warden._id%>/calculateMonthlySalary" method="POST" >
    <div class="row" style="margin-top: 40px;">
      <div class="col">
        <h2 style="    text-align: center;">
          Enter the Month Number for which salary is to be calculated. 
        </h2>
        <h3 style="text-align: center;">1 for January, 2 for February and so on............</h3>
        <div class="form-group" style="max-width: 50%; text-align: center; margin: auto;">
          <input
            class="form-control"
            type="text"
            name="month"
            placeholder="Month"
          />
        </div>

        

        <div class="form-group" style="margin: auto; margin-top: 30px; max-width: 30%;">
          <button
            type="submit"
            class="btn btn-lg btn-rounded btn-primary btn-block "
          >
           Submit
          </button>
        </div>
      </div>
    </div>
  </form>
  <div style="text-align:center; margin-top: 10px;">
          
    <a href="/warden/home" class="btn btn-info btn-sm" style="width: 100px; margin-top: 40px">Back</a>
  </div>
  <% include ./partial/footer %>